#include "libft.h"

int	main()
{
	char *test = "Test numero 1";
	char *test2 = "Test numero 2";
	char *tmp;
	int i;

	printf("-------TEST MEMSET-------\n");
	test = (char*)malloc(sizeof(char) * 14);
	test2 = (char*)malloc(sizeof(char) * 14);
	//test = "Test numero 1";
	//test2 = "Test numero 2";
	printf("Original (5): ");
	test = memset(test, 'A', 5);
	printf("%s\n", test);
	printf("Fonction (5): ");
	test = ft_memset(test, 'A', 5);
	printf("%s\n", test);
	printf("Original (3): ");
	test2 = memset(test2, 'B', 3);
	printf("%s\n",test2);
	printf("Fonction (3): ");
	test2 = ft_memset(test2, 'B', 3);
	printf("%s\n", test2);
	printf("-----------FIN-----------\n");
	printf("--------TEST BZERO-------\n");
	test = (char*)malloc(sizeof(char) * 14);
	test2 = (char*)malloc(sizeof(char) * 14);
	printf("Original (5): ");
	bzero(test, 5);
	i = 0;
	while (i < 6)
	{
		if (test[i] == '\0')
			i++;
		else 
			printf("Error");
	}
	if (i == 6)
		printf("Success\n");
	printf("Fonction (5): ");
	ft_bzero(test, 5);
	i = 0;
	while (i < 6)
	{
		if (test[i] == '\0')
			i++;
		else 
			printf("Error");
	}
	if (i == 6)
		printf("Success\n");
	printf("Original (2): ");
	bzero(test2, 2);
	i = 0;
	while (i < 3)
	{
		if (test2[i] == '\0')
			i++;
		else 
			printf("Error");
	}
	if (i == 3)
		printf("Success\n");
	printf("Fonction (2): ");
	ft_bzero(test2, 2);
	i = 0;
	while (i < 3)
	{
		if (test2[i] == '\0')
			i++;
		else 
			printf("Error");
	}
	if (i == 3)
		printf("Success\n");
	test = "TEST CLEM1";
	free(test);
	test = (char*)malloc(sizeof(char) * 14);
	printf("Original (5): ");
	bzero(test, 5);
	i = 0;
	while (i < 6)
	{
		if (test[i] == '\0')
			i++;
		else 
			printf("Error");
	}
	if (i == 6)
		printf("Success\n");
	printf("-----------FIN-----------\n");
	test = "Test numero 1";
	test2 = "Test numero 2";
	printf("-------TEST MEMCPY-------\n");
	tmp = (char*)malloc(sizeof(char) * 50);
	printf("Original (6): ");
	printf("%s\n", memcpy(tmp, test, 6));
	test = "Test numero 1";
	tmp = (char*)malloc(sizeof(char) * 50);
	printf("Fonction (6): ");
	printf("%s\n", ft_memcpy(tmp, test, 6));
	free(tmp);
	printf("-----------FIN-----------\n");
	test = "Test numero 1";
	test2 = "Test numero 2";
	printf("-------TEST MEMMOVE------\n");
	tmp = (char*)malloc(sizeof(char) * 50);
	printf("Original (6): ");
	printf("%s\n", memmove(tmp, test, 6));
	test = "Test numero 1";
	printf("Fonction (6): ");
	printf("%s\n", ft_memmove(tmp, test, 6));
	free(tmp);
	printf("-----------FIN-----------\n");
	printf("-------TEST MEMCHR-------\n");
	tmp = (char*)malloc(sizeof(char) * 50);
	printf("Original (u): ");
	printf("%s\n", memchr(test, 'u', 13));
	printf("Fonction (u): ");
	printf("%s\n", ft_memchr(test, 'u', 13));
	printf("-----------FIN-----------\n");
	return (0);
}
